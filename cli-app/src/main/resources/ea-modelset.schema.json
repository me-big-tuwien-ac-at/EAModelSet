        "version": {
            "type": "string",
            "description": "Current version of the dataset",
            "examples": [
                "0.0.1"
            ]
        },
        "lastUpdated": {
            "type": "string",
            "description": "Date when the dataset was last updated",
            "examples": [
                "2023-06-30"
            ]
        },
        "modelCount": {
            "type": "integer",
            "minimum": 0
        },
        "modelInfos": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ModelInfo"
            }
        }
    },
    "required": [
