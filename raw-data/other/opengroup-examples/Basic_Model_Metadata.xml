<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.opengroup.org/xsd/archimate/3.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xsi:schemaLocation="http://www.opengroup.org/xsd/archimate/3.0/ http://www.opengroup.org/xsd/archimate/3.1/archimate3_Model.xsd
    http://purl.org/dc/elements/1.1/ http://dublincore.org/schemas/xmls/qdc/2008/02/11/dc.xsd"
    identifier="model-1"
    version="1.0">
    
    <name xml:lang="en">Basic Model</name>
    
    <documentation xml:lang="en">Example of basic model with two elements and a relationship and Metadata</documentation>

    <metadata>
        <schema>>Dublin Core</schema>
        <schemaversion>1.1</schemaversion>
        <dc:title>Basic Model example with Metadata</dc:title>
        <dc:creator>Phil Beauvoir</dc:creator>
    </metadata>

    <elements>
        <element identifier="ba1" xsi:type="BusinessActor">
            <name xml:lang="en">A Business Actor</name>
        </element>
        <element identifier="br1" xsi:type="BusinessRole">
            <name xml:lang="en">A Business Role</name>
        </element>
    </elements>
    
    <relationships>
        <relationship identifier="relation-1" source="ba1" target="br1" xsi:type="Assignment">
            <name xml:lang="en">Assignment Relationship</name>
        </relationship>
    </relationships>
</model>
