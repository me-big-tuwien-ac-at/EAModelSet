<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.opengroup.org/xsd/archimate/3.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.opengroup.org/xsd/archimate/3.0/ http://www.opengroup.org/xsd/archimate/3.1/archimate3_Model.xsd"
    identifier="model-4"
    version="1.0">
    
    <name xml:lang="en">Basic Model</name>
    
    <documentation xml:lang="en">Example of a basic model with two elements and a relationship and an Organization</documentation>
    
    <elements>
        <element identifier="ba1" xsi:type="BusinessActor">
            <name xml:lang="en">A Business Actor</name>
        </element>
        <element identifier="br1" xsi:type="BusinessRole">
            <name xml:lang="en">A Business Role</name>
        </element>
    </elements>
    
    <relationships>
        <relationship identifier="relation-1" source="ba1" target="br1" xsi:type="Assignment">
            <name xml:lang="en">Assignment Relationship</name>
        </relationship>
    </relationships>
    
    <organizations>
        <item identifier="folder1">
            <label xml:lang="en">Business Layer</label>
            <item identifierRef="ba1"/>
            <item identifierRef="br1"/>
        </item>
        <item identifier="folder2">
            <label>Relations</label>
            <item identifierRef="relation-1"/>
        </item>
    </organizations>

</model>
